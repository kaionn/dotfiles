{
  "includeCoAuthoredBy": false,
  "permissions": {
    "allow": [],
    "deny": [],
    "ask": []
  },
  "model": "opus",
  "enableAllProjectMcpServers": false,
  "hooks": {
    "Stop": [
      {
        "matcher": "*",
        "hooks": [
          {
            "type": "command",
            "command": "afplay /System/Library/Sounds/Funk.aiff"
          },
          {
            "type": "command",
            "command": "osascript -e 'display notification \"Claude Code が入力待ちです\" with title \"Claude Code\" sound name \"Funk\"'"
          }
        ]
      }
    ],
    "SessionEnd": [
      {
        "matcher": "*",
        "hooks": [
          {
            "type": "command",
            "command": "node ~/.claude/hooks/session-logger.mjs"
          }
        ]
      }
    ]
  },
  "statusLine": {
    "type": "command",
    "command": "~/.claude/statusline.sh",
    "padding": 0
  },
  "enabledPlugins": {
    "agent-sdk-dev@claude-code-plugins": true,
    "claude-opus-4-5-migration@claude-code-plugins": true,
    "code-review@claude-code-plugins": true,
    "commit-commands@claude-code-plugins": true,
    "explanatory-output-style@claude-code-plugins": true,
    "feature-dev@claude-code-plugins": true,
    "frontend-design@claude-code-plugins": true,
    "hookify@claude-code-plugins": false,
    "learning-output-style@claude-code-plugins": true,
    "plugin-dev@claude-code-plugins": true,
    "pr-review-toolkit@claude-code-plugins": true,
    "ralph-wiggum@claude-code-plugins": true,
    "security-guidance@claude-code-plugins": true,
    "gopls-lsp@claude-plugins-official": true,
    "clangd-lsp@claude-plugins-official": true,
    "claude-code-harness@claude-code-harness-marketplace": true,
    "brand-guidelines@awesome-claude-skills": true,
    "competitive-ads-extractor@awesome-claude-skills": true,
    "domain-name-brainstormer@awesome-claude-skills": true,
    "internal-comms@awesome-claude-skills": true,
